# Ignore WordPress core files
wp-admin/
wp-includes/
license.txt
readme.html
xmlrpc.php
wp-config-sample.php

# Ignore uploads (media files)
wp-content/uploads/

# Ignore cache
wp-content/cache/
wp-content/backups/
wp-content/upgrade/

# Ignore auto-generated plugins and themes you didn't create
wp-content/plugins/*
wp-content/themes/*

# But allow your custom plugins/themes
!wp-content/plugins/your-custom-plugin/
!wp-content/themes/your-custom-theme/

# Ignore temporary files
*.log
*.tmp
*.temp
*.swp
*.swo

# Ignore OS files
.DS_Store
Thumbs.db

# Ignore environment files
.env
.env.local
docker-compose.override.yml

# Ignore vendor (if using Composer for PHP packages)
vendor/

# Ignore node modules (if using npm/yarn)
node_modules/